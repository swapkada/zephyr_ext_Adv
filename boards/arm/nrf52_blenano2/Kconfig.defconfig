if BOARD_NRF52_BLENANO2

config BOARD
	default nrf52_blenano2

if GPIO_NRF5

config GPIO_NRF5_P0
	default y

endif # GPIO_NRF5

if UART_NRF5

config UART_NRF5_GPIO_TX_PIN
	default 29

config UART_NRF5_GPIO_RX_PIN
	default 30

config UART_NRF5_GPIO_RTS_PIN
	default 2

config UART_NRF5_GPIO_CTS_PIN
	default 28

endif # UART_NRF5

endif # BOARD_NRF52_BLENANO2
